{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "runner": "terminal",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "install",
            "args": ["install"]
        },
        {
            "taskName": "update",
            "args": ["update"]
        },
        {
            "taskName": "build",
            "args": ["run", "build"],
            "isBuildCommand": true
        },
        {
            "taskName": "serve",
            "args": ["start"]
        },
        {
            "taskName": "open",
            "args": ["start", "--", "-o"]
        },
        {
            "taskName": "test",
            "args": ["run", "test"],
            "isTestCommand": true
        }
    ]
}